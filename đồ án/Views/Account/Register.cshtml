@model đồ_án.Models.View_Model.RegisterVM

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
    <style>
        .container-signin {
            text-align: center;
        }
        .container-info {
            display: flex;
            justify-content: center;
            margin: 10px;
            border-radius: 10px 0px 10px 0px;
            border: 1px solid black;
            background-image: url('../../content/img/anhnendangki/anna1.png');
        
        }
        .form-horirontal{
            padding:5% 32%;
        }
        .info{
            margin:20px;
            color:white;
        }
        .form-group{
            margin-bottom:20px;
        }
        .col-md-6{
            color:goldenrod;
        }
        .btn{
            font-size:20px;
            padding:10px;
            font-family:'Times New Roman';
        }
    </style>

    <div class="container-signin">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horirontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <h2 class="col-md-6"> Đăng ký tài khoản </h2>
                </div>
                <div class="container-info">
                    <div class="info">
                        @*Tên đăng nhập*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Username, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*Mật khẩu*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.Password, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*Xác nhận mật khẩu*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>

                    </div>
                    <div class="info">
                        @*Họ tên khách hàng*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerName, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.CustomerName, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*SDT khách hàng*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerPhone, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.CustomerPhone, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*Email khách hàng*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerEmail, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.CustomerEmail, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*Địa chỉ khách hàng*@
                        <div class="form-group">
                            @Html.LabelFor(model => model.CustomerAddress, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttibutes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
           
            

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Đăng ký" class="btn btn-info accountbtn" /><br />
                        <p>Bạn Đã Có Tài Khoản? <a href="@Url.Action("Login", "Account", null)" />Đăng nhập</p>
                    </div>
                </div>
            </div>
        }
    </div>

