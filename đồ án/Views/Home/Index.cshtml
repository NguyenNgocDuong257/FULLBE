@model đồ_án.Models.View_Model.HomeProductVM

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<meta name="viewport" content="initial-scale=0.1">
<link href="~/Content/css/IndexHome.css" rel="stylesheet" />
<style type="text/css">
    .container-list-right {
        display: inline-block;
        max-width: 80%;
    }
    .side-menu {
        display: inline-block;
        position: sticky;
        top: 20px;
        border: solid gray 0.5px;
        border-radius: 20px;
        vertical-align: top;
        margin-top: 20px;
        background-color: white;
        margin-right: 20px;
    }

    .side-menu-item {
        text-align: left;
        padding: 5px;
    }

        .side-menu-item img {
            max-width: 70px;
            display: inline-block;
            border: hidden;
            border-radius: 5px;
        }

        .side-menu-item p {
            display: inline-block;
            margin: 0;
            vertical-align: 60%;
        }
    @@media screen and (min-width:1840px) {
        .container {
            max-width: 1840px !important;
            width: 1840px !important;
        }

        .container-list-right {
            max-width: 80%
        }

        .side-menu {
            max-width: 16% !important;
            width: 16% !important;
        }
    }

    @@media screen and (max-width:1839px) {
        .container {
            max-width: 1053px !important;
            width: 1053px !important;
        }

        .container-list-right {
            max-width: 75%
        }

        .side-menu {
            max-width: 18% !important;
            width: 18% !important;
        }
    }
    .container {
        background-color: whitesmoke;
        text-align: center;
        display: block;
    }
    .search-content{

    }
</style>
<section class="container">
    <div id="carouselbanner" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/img/HomeImg/Hbanner.png" alt="First slide" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/img/HomeImg/hbn.jpg" alt="Second slide" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselbanner" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselbanner" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <section class="search-content">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            @Html.TextBoxFor(m => m.SearchTerm, new
       {
           @class = "search-input",
           placeholder = "Nhập tên, mô tả hoặc loại sản phẩm"
            })

            <button type="submit" class="search-button">Tìm kiếm</button>
        }
    </section>
    <div class="side-menu">
        <h4 style="margin: 0;">Danh Mục</h4>
        <div class="side-menu-item">
            <img src="~/Content/img/HomeImg/giay2.png" />
            <p>Giày Thể Thao</p>
        </div>
        <div class="side-menu-item">
            <img src="~/Content/img/HomeImg/gangtay12.png" />
            <p>Găng Tay Thể Thao</p>
        </div>
        <div class="side-menu-item">
            <img src="~/Content/img/HomeImg/ao2.png" />
            <p>Áo Thể Thao</p>
        </div>
    </div>
    <div class="container-list-right">
        @Html.Partial("GiayProductsPV", Model)
        @Html.Partial("AoProductsPV", Model)
        @Html.Partial("PhukienProductsPV", Model)
        @*@Html.Partial("NewProductsPV", Model)
        @Html.Partial("FeatureProductsPV", Model)*@   
        <div class="cuahanglist">
            <div class="cuahang1">
                <h2>HỆ THỐNG 02 CỬA HÀNG - MỞ CỬA LÚC 8H - 21H30</h2>
                <img src="~/Content/img/HomeImg/anhcuahang1.jpg" />
            </div>
            <div class="cuahang1">
                <h2>CHÍNH SÁCH KHÁCH HÀNG THÂN THIẾT</h2>
                <img src="~/Content/img/HomeImg/anhcuahang2.jpg" />
            </div>
        </div>
    </div>
</section>


