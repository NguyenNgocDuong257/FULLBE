                text-align: center;
                font-size: 51px;
                color: darkred;
            }

        .phude {
            color: grey;
            font-size: 26px;
        }

        .giaylist {
        }

            .giaylist li {
                display: inline-block;
                width: 500px;
            }

        .giay {
            padding: 20px;
            width: 20%;
            display: inline-block;
            vertical-align: top;
            font-size: 50px;
        }

        .tenGiay {
            font-size: 27px;
            text-align: center;
            color: darkblue;
            font-weight: bold;
        }

        .giay img {
            width: 100%;
            border-style: groove;
            border-radius: 25px
        }

        .price {
            font-size: 32px;
            text-align: center;
            font-weight: bold;
            color: red;
        }

        .detail {
            font-size: 24px;
            text-align: left;
            color: grey;
        }

        .firstPrice {
            font-size: 17px;
            text-align: center;
            color: black;
        }

        .more {
            text-align: center;
            margin-bottom: 20px;
        }

            .more a {
