    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="header">
            <div class="container-header">
                <div class="inner-header">
                    <div class="logo">
                        <a href="/Home/Index"><img src="~/Content/img/logo.png" /></a>
                    </div>
